@model WebShop.Models.Products_StoreProduct

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Store product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Section)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Section)
        </dd>

        <dt>
            Imagen
        </dt>

        <dd>
            <img src="@Model.Img" class="img-thumbnail" style="max-height: 300px; max-width: 300px;" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stock)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>

    </dl>
</div>
<p>
    @if (User.Identity.Name.Equals("Admin"))
    {
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-warning" })
    }
    @Html.ActionLink("Volver a productos", "Index", null, new { @class = "btn btn-outline-info" })
    @if(Model.Stock > 0)
    {
        @Html.ActionLink("Añadir a carrito", "AddToCart", new { id = Model.Id }, new { @class = "btn btn-outline-success" })
    } else
    {
        <button type="button" class="btn btn-outline-dark" disabled>Sin stock</button>
    }

</p>
