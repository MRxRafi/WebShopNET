@model IEnumerable<WebShop.Models.Products_StoreProduct>

@{
    ViewBag.Title = "Index";
    string noStockImg = "https://pngimg.com/uploads/sold_out/sold_out_PNG73.png";
}

<h2>Index</h2>

@if (User.Identity.Name.Equals("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section)
        </th>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section)
        </td>
        <td>
            @if (item.Stock > 0)
            {
                <img src="@Url.Content(item.Img)" alt="Product image" style="width: 150px; height: 150px;" /> }
            else
            {
                <img src="@Url.Content(noStockImg)" alt="No stock image" style="width: 150px; height: 150px;" />
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @if (item.Stock > 0)
            {
                @Html.ActionLink("Add to cart", "AddToCart", new { id = item.Id })
            } else
            {
                <span>Sin stock</span>
            }

            @if (User.Identity.Name.Equals("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }

        </td>
    </tr>
    }

</table>
