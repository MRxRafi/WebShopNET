@model IEnumerable<WebShop.Models.Products_OrderProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Carrito de la compra</h2>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section)
                </td>
                <td>
                    @Html.ActionLink("Eliminar una unidad", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }

    </table>
    
    <input type="button" value="Buy" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Orders")'" />
    
}
else
{
    <h3>No hay artículos en tu carrito</h3>
}

@Html.ActionLink("Volver a productos", "Index", "Products", null, new { @class= "btn btn-outline-info" })

