@model IEnumerable<WebShop.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos</h2>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @item.TotalPrice() $
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
} else
{
    <h3>No ha realizado ningún pedido todavía. Compre ahora en un solo click con Amason: </h3> @Html.ActionLink("Productos", "Index", "Products");
}

